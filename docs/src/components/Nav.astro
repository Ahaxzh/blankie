---
import { Image } from "astro:assets";
import icon from "../assets/icon.png";
const currentPath = Astro.url.pathname;
---

<header
  class="bg-black/80 backdrop-blur-md border-b border-white/10 fixed w-full top-0 z-50"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav class="flex justify-between items-center">
      <a
        href="/"
        class="flex items-center gap-x-3 text-white no-underline"
        id="logo-link"
      >
        <Image
          src={icon}
          alt="The Blankie app icon, which looks like a folded yellow blanket with one corner flipped over"
          width={40}
          height={33}
          class="h-10 w-10 object-contain"
          style={{ aspectRatio: "802/666" }}
        />
        <span class="text-2xl font-semibold tracking-tight">Blankie</span>
      </a>

      <!-- Mobile menu button with hamburger icon -->
      <button
        id="mobile-menu-button"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
        class="md:hidden text-white hover:text-primary-blue transition-colors duration-200 p-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
          role="img"
        >
          <title>Menu icon</title>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <span class="sr-only">Toggle menu</span>
      </button>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-x-10">
        <a
          href="/usage"
          class:list={[
            "text-white text-sm hover:text-primary-blue transition-colors duration-200",
            { "text-primary-blue": currentPath === "/usage" },
          ]}
        >
          How to Use
        </a>
        <a
          href="/privacy"
          class:list={[
            "text-white text-sm hover:text-primary-blue transition-colors duration-200",
            { "text-primary-blue": currentPath === "/privacy" },
          ]}
        >
          Privacy
        </a>
        <a
          href="/credits"
          class:list={[
            "text-white text-sm hover:text-primary-blue transition-colors duration-200",
            { "text-primary-blue": currentPath === "/credits" },
          ]}
        >
          Credits
        </a>
        <a
          href="/?section=download"
          class="bg-primary-blue text-white py-2 px-6 rounded-full text-sm font-normal transition-all duration-300 hover:bg-deep-blue no-underline"
        >
          Download
        </a>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="flex flex-col gap-y-4 pt-4 pb-6">
        <a
          href="/usage"
          class:list={[
            "text-white text-sm hover:text-primary-blue transition-colors duration-200",
            { "text-primary-blue": currentPath === "/usage" },
          ]}
        >
          How to Use
        </a>
        <a
          href="/privacy"
          class:list={[
            "text-white text-sm hover:text-primary-blue transition-colors duration-200",
            { "text-primary-blue": currentPath === "/privacy" },
          ]}
        >
          Privacy
        </a>
        <a
          href="/credits"
          class:list={[
            "text-white text-sm hover:text-primary-blue transition-colors duration-200",
            { "text-primary-blue": currentPath === "/credits" },
          ]}
        >
          Credits
        </a>
        <a
          href="/?section=download"
          class="bg-primary-blue text-white py-2 px-6 rounded-full text-sm font-normal transition-all duration-300 hover:bg-deep-blue no-underline inline-block text-center"
        >
          Download
        </a>
      </div>
    </div>
  </div>
</header>
